@model List<TeaShopAPI.UI.Dtos.AboutDtos.ResultAboutDto>

<div class="about_section layout_padding">
    <div id="my_main_slider" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach(var item in Model)
            {
                <div class="carousel-item @(item.AboutID == 1 ? "active" : "")">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="about_main">
                                    <h1 class="about_taital">@item.Title</h1>
                                    <p class="about_text">@item.Description</p>
                                    <div class="readmore_bt"><a href="#">Read More</a></div>
                                </div>
                            </div>
                            <div class="col-md-6 ">
                                <div class="image_2"><img src="@item.ImageURl"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
        <a class="carousel-control-prev" href="#my_main_slider" role="button" data-slide="next">
            <i class="fa fa-angle-left"></i>
        </a>
        <a class="carousel-control-next" href="#my_main_slider" role="button" data-slide="next">
            <i class="fa fa-angle-right"></i>
        </a>
    </div>
</div>
<div class="booking_section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <div class="booking_bt"><a href="/Reservation/Index/">Rezervasyon</a></div>
            </div>
        </div>
    </div>
</div>